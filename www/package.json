{
  "name": "create-cwf-app",
  "version": "0.1.0",
  "description": "Web framework based on CSS syntax",
  "main": "index.js",
  "license": "MIT",
  "bin": {
    "create-wasm-app": ".bin/create-cwf-app.js"
  },
  "scripts": {
    "start": "wasm-pack build && run-p -n --aggregate-output serve rustwatch cwfwatch",

    "debug": "run-s -c build:force debug:swap_in format build debug:swap_out",
    "debug:swap_in": "mv ../src/lib.rs ../cwf_macro_input.rs && mv ../cwf_macro_output.rs ../src/lib.rs",
    "debug:swap_out": "mv ../cwf_macro_input.rs ../src/lib.rs",

    "serve": "webpack-dev-server --open",
    "test": "wasm-pack test --headless --chrome --firefox ..",

    "format": "rustfmt ../src/lib.rs",
    "cwfwatch": "onchange -k ../cwf ../../cascading-wasm-framework/src -- touch ../src/lib.rs",
    "rustwatch": "onchange -k ../src -- wasm-pack build",
    "build": "wasm-pack build",
    "build:force": "touch ../src/lib.rs && cargo build",

    "build:prod": "webpack --config webpack.config.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/thisminute/cwf.git"
  },
  "keywords": [
    "rust",
    "wasm",
    "webassembly",
    "webpack"
  ],
  "dependencies": {
    "cwf-rust": "file:../pkg"
  },
  "devDependencies": {
    "copy-webpack-plugin": "^6.0.3",
    "npm-run-all": "^4.1.5",
    "onchange": "^7.0.2",
    "webpack": "^4.43.0",
    "webpack-cli": "^3.3.12",
    "webpack-dev-server": "^3.11.0"
  }
}
