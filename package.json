{
  "main": "index.js",
  "license": "MIT",
  "scripts": {
    "start": "npm run build && run-p -n --aggregate-output serve watch",
    "build": "mkdir -p target/html && wasm-pack build",
    "serve": "webpack-dev-server --open",
    "test": "wasm-pack test --headless --chrome --firefox",
    "watch": "onchange -k src -- npm run build",
    "debug": "run-s -c debug:build format build debug:swap_out debug:format_macro",
    "debug:build": "run-s -sc build:force debug:swap_in",
    "debug:swap_in": "mv src/lib.rs target/cui_macro_input.rs && cp target/cui_macro_output.rs src/lib.rs",
    "debug:swap_out": "cp target/cui_macro_input.rs src/lib.rs",
    "debug:format_macro": "cp target/cui_macro_output.rs target/cui_macro_output_formatted.rs && rustfmt target/cui_macro_output_formatted.rs",
    "build:prod": "webpack --config webpack.config.js"
  },
  "dependencies": {
    "cui-rust": "file:pkg"
  },
  "devDependencies": {
    "copy-webpack-plugin": "6.0.3",
    "npm-run-all": "^4.1.5",
    "onchange": "^7.1.0",
    "webpack": "4.44.0",
    "webpack-cli": "3.3.12",
    "webpack-dev-server": "3.11.0"
  }
}
